<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.NGOConnectApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
         <item name="colorPrimary">@color/bg_color</item>
        <item name="android:statusBarColor">@color/bg_color</item>
        <item name="android:textColor">@color/black_shade</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>

    </style>

    <style name="NavigationTheme" parent="Base.Theme.NGOConnectApp">
        <item name="android:layout_marginBottom">11dp</item>
        <item name="dividerVertical">@dimen/design_navigation_separator_vertical_padding</item>
        <item name="listPreferredItemHeightSmall">22dp</item>
        <item name="android:listDivider">@color/light_grey</item>

</style>
</resources>