<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.NGOConnectApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/bg_color</item>
        <item name="android:statusBarColor">@color/bg_color</item>
        <item name="android:textColor">@color/black_shade</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="Theme.NGOConnectApp" parent="Base.Theme.NGOConnectApp" />

    <style name="BtnColor" parent="Theme.NGOConnectApp">
        <item name="colorPrimary">@color/white</item>
    </style>

<!--Card Style of NGOs list-->
    <style name="CustomNgoCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>
    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">25dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">25dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="NavigationTheme" parent="Base.Theme.NGOConnectApp">
        <item name="android:layout_marginBottom">11dp</item>
        <item name="dividerVertical">@dimen/design_navigation_separator_vertical_padding</item>
        <item name="listPreferredItemHeightSmall">22dp</item>
    </style>

    <style name="Navigation_item_text" parent="">
        <item name="android:textSize"> 21sp</item>
    </style>

</resources>